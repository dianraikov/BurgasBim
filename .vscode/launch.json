{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0", // version del archivo
    "configurations": [
         // configuraciones
        {
            "type": "node", // tipo de configuracion
            "request": "launch", // tipo de lanzamiento
            "name": "Launch Server", // nombre de la configuracion
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "start"
            ],
            "skipFiles": [ // archivos a omitir
                "<node_internals>/**" // archivos internos de node
            ],
            "envFile": "${workspaceFolder}/.env" // entorno de ejecucion del codigo
        }
    ]
}